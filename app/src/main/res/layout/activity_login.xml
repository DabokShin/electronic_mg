<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/loginMainView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgServerChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28.3dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/greeting"
                        android:soundEffectsEnabled="false"
                        android:scaleType="centerInside"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28.3dp"
                        android:layout_marginTop="25dp"
                        android:text="배달 기사님\n안녕하세요!"
                        android:textColor="#FFFFFFFF"
                        android:textStyle="bold"
                        android:textSize="32sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20.7dp"
                        android:layout_marginTop="27dp"
                        android:layout_marginEnd="21.3dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="8.3dp">

                            <EditText
                                android:id="@+id/id"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/base_copy"
                                android:drawableStart="@drawable/cursor_copy"
                                android:drawablePadding="10dp"
                                android:hint="@string/id_hint"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:lines="1"
                                android:maxLines="1"
                                android:paddingLeft="20.7dp"
                                android:textColor="#222222"
                                android:textColorHint="#a0a0a0"
                                android:textSize="18.3dp"
                                android:textStyle="bold"
                                tools:text="hdpark" />

                            <ImageButton
                                android:id="@+id/id_cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="8.3dp"
                                android:background="@drawable/shape_591_copy_2"
                                android:visibility="gone"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="8.3dp">

                            <EditText
                                android:id="@+id/phone_no"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/base_copy"
                                android:drawableStart="@drawable/cursor_copy"
                                android:drawablePadding="10dp"
                                android:hint="@string/phone_hint"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:digits="0123456789"
                                android:lines="1"
                                android:maxLength="13"
                                android:maxLines="1"
                                android:paddingStart="20.7dp"
                                android:textColor="#222222"
                                android:textColorHint="#a0a0a0"
                                android:textSize="18.3dp"
                                android:textStyle="bold"
                                tools:text="010-2364-5325"
                                tools:ignore="RtlSymmetry" />

                            <ImageButton
                                android:id="@+id/phone_no_cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="8.3dp"
                                android:background="@drawable/shape_591_copy_2"
                                android:visibility="gone"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:visibility="gone"
                            android:layout_marginBottom="8.3dp">

                            <EditText
                                android:id="@+id/car_no"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/base_copy"
                                android:drawableStart="@drawable/cursor_copy"
                                android:drawablePadding="10dp"
                                android:hint="@string/car_no_hint"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:lines="1"
                                android:maxLines="1"
                                android:paddingStart="20.7dp"
                                android:textColor="#222222"
                                android:textColorHint="#a0a0a0"
                                android:textSize="18.3dp"
                                android:textStyle="bold"
                                tools:text="21허1118"
                                tools:ignore="RtlSymmetry" />

                            <ImageButton
                                android:id="@+id/car_no_cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="8.3dp"
                                android:background="@drawable/shape_591_copy_2"
                                android:visibility="gone"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="28dp">

                            <EditText
                                android:id="@+id/pw"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/base_copy"
                                android:drawableStart="@drawable/cursor_copy"
                                android:drawablePadding="10dp"
                                android:fontFamily=""
                                android:hint="@string/pw_hinjt"
                                android:imeOptions="actionDone"
                                android:inputType="textPassword"
                                android:lines="1"
                                android:maxLines="1"
                                android:paddingStart="20.7dp"
                                android:textColor="#222222"
                                android:textColorHint="#a0a0a0"
                                android:textSize="18.3dp"
                                android:textStyle="bold"
                                tools:text="aaaa"
                                tools:ignore="RtlSymmetry" />

                            <ImageButton
                                android:id="@+id/pw_cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="8.3dp"
                                android:background="@drawable/shape_591_copy_2"
                                android:visibility="gone"/>

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/txtForgetpw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="28dp"
                            android:src="@drawable/pw_forget"
                            android:scaleType="centerInside"
                            android:visibility="gone"/>

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/btn_register_company"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="7dp"
                                android:text="@string/login_register_company"
                                android:textSize="22dp"
                                android:textColor="#fff"
                                android:textStyle="bold"
                                android:letterSpacing="-0.01"
                                android:gravity="center"
                                android:background="@drawable/bg_sign_up"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toLeftOf="@+id/btn_sign_up"
                                app:layout_constraintHorizontal_chainStyle="packed"/>

                            <TextView
                                android:id="@+id/btn_sign_up"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:text="@string/login_sign_up"
                                android:textSize="22dp"
                                android:textColor="#fff"
                                android:textStyle="bold"
                                android:letterSpacing="-0.01"
                                android:gravity="center"
                                android:background="@drawable/bg_sign_up"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/btn_register_company"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        </android.support.constraint.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#02d1d9" />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/ripple_white_effect"
                    android:gravity="center"
                    android:text="로그인"
                    android:textColor="#02d1d9"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvServerChange"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:textSize="10dp"
            android:gravity="center_vertical|end"
            android:visibility="gone"
            android:layout_marginEnd="11dp"
            android:textColor="@android:color/white"
            tools:text="Version"/>

        <LinearLayout
            android:id="@+id/loginLocFindingLayout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_login"
            android:layout_marginTop="15dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ProgressBar
                android:id="@+id/loginLocProgressbar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:progressBackgroundTint="@android:color/white"
                android:progressTint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="위치정보 수신 중입니다."
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/loadingBarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:progressBackgroundTint="#02d1d9"
                android:progressTint="#02d1d9"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </RelativeLayout>


</layout>