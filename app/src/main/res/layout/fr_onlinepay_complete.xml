<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            android:id="@+id/title"
            layout="@layout/macaron_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="49dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rectangle_60211"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="30dp">

                    <!--고객이 앱 결제하였습니다-->
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="59dp">

                        <TextView
                            android:id="@+id/completeTmpText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="앱 결제"
                            android:textColor="#02d1d9"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/completeTmpText3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/completeTmpText3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가 완료되었습니다."
                            android:textColor="#222222"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toRightOf="@+id/completeTmpText2"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </android.support.constraint.ConstraintLayout>

                    <!--상세정보-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="41.7dp"
                        android:background="#656565" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.7dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="배달요금"
                            android:textColor="#656565"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/completeFare"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="13.3dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:textColor="#222222"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            tools:text="1,117,000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"
                            android:textColor="#222222"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20.3dp"
                        android:background="#656565" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.7dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_taxi_toll"
                            android:textColor="#656565"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/completeServiceCharge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="13.3dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:textColor="#222222"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            tools:text="3,000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"
                            android:textColor="#222222"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="17.3dp"
                        android:background="#656565" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.3dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="결제금액"
                            android:textColor="#656565"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/completeReqFareCat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="13.3dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:textColor="#ff1c74"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            tools:text="1,120,000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"
                            android:textColor="#ff1c74"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="17.3dp"
                        android:background="#656565" />

                    <!--빈 공간-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50.3dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="21.3dp"
                    android:src="@drawable/complete_vertor_object" />

            </RelativeLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="200dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fareCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3bd9de"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    tools:text="직접 결제" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가"
                    android:textColor="#222222"
                    android:textSize="30dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료되었습니다."
                android:textColor="#222222"
                android:textSize="30dp" />


        </LinearLayout>

        <Button
            android:id="@+id/btnOnlineConfirm"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/ripple_true_effect"
            android:text="@string/confirm"
            android:textColor="@color/txtColorWhite"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

</layout>