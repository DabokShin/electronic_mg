<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/macaron_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#fafafa"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_modify">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/view_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:importantForAccessibility="no"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/btn_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="28dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/toolbar_profile_photo_dummy"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/profile_container"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_profile_container"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/btn_profile"/>

                <TextView
                    android:id="@+id/textview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textSize="17.5dp"
                    android:textColor="#656565"
                    android:letterSpacing="-0.01"
                    android:text="김배달"
                    android:includeFontPadding="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_container"/>

                <TextView
                    android:id="@+id/account_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="21dp"
                    android:textSize="16dp"
                    android:textColor="#00cad2"
                    android:letterSpacing="-0.02"
                    android:text="@string/profile_chauffeur_info_section"
                    android:includeFontPadding="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_name"/>

                <TextView
                    android:id="@+id/account"
                    android:layout_width="100dp"
                    android:layout_height="65dp"
                    android:gravity="center|left"
                    android:textSize="17.5dp"
                    android:textColor="#656565"
                    android:letterSpacing="-0.01"
                    android:text="@string/profile_chauffeur_account"
                    app:layout_constraintLeft_toLeftOf="@+id/account_section"
                    app:layout_constraintTop_toBottomOf="@+id/account_section"
                    app:layout_constraintRight_toLeftOf="@+id/account_text"
                    app:layout_constraintHorizontal_chainStyle="packed" />

                <TextView
                    android:id="@+id/account_text"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="17.5dp"
                    android:textColor="#222222"
                    android:letterSpacing="-0.01"
                    app:layout_constraintLeft_toRightOf="@+id/account"
                    app:layout_constraintTop_toTopOf="@+id/account"
                    app:layout_constraintBottom_toBottomOf="@+id/account"
                    app:layout_constraintRight_toRightOf="parent"/>

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:background="#cccccc"
                    app:layout_constraintTop_toBottomOf="@+id/account"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/password"
                    android:layout_width="100dp"
                    android:layout_height="65dp"
                    android:gravity="center|left"
                    android:textSize="17.5dp"
                    android:textColor="#656565"
                    android:letterSpacing="-0.01"
                    android:text="@string/profile_chauffeur_password"
                    app:layout_constraintLeft_toLeftOf="@+id/divider1"
                    app:layout_constraintTop_toBottomOf="@+id/divider1"
                    app:layout_constraintRight_toLeftOf="@+id/edittext_password"
                    app:layout_constraintHorizontal_chainStyle="packed" />

                <EditText
                    android:id="@+id/edittext_password"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:hint="@string/profile_chauffeur_password_hint"
                    android:textSize="17.5dp"
                    android:textColor="#222222"
                    android:textColorHint="#cccccc"
                    android:letterSpacing="-0.01"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    app:layout_constraintLeft_toRightOf="@+id/password"
                    app:layout_constraintTop_toTopOf="@+id/password"
                    app:layout_constraintBottom_toBottomOf="@+id/password"
                    app:layout_constraintRight_toLeftOf="@+id/btn_password_change"/>

                <TextView
                    android:id="@+id/btn_password_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="21dp"
                    android:textSize="14dp"
                    android:textColor="#222222"
                    android:letterSpacing="-0.01"
                    android:gravity="center"
                    android:background="@drawable/bg_round_btn_small"
                    android:text="@string/txt_change"
                    app:layout_constraintLeft_toRightOf="@+id/edittext_password"
                    app:layout_constraintTop_toTopOf="@+id/password"
                    app:layout_constraintBottom_toBottomOf="@+id/password"
                    app:layout_constraintRight_toRightOf="parent" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:background="#cccccc"
                    app:layout_constraintTop_toBottomOf="@+id/password"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/view_expanded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divider2"
                    app:layout_constraintBottom_toTopOf="@+id/phone_number">

                    <TextView
                        android:id="@+id/new_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:layout_marginLeft="21dp"
                        android:textSize="17.5dp"
                        android:textColor="#656565"
                        android:letterSpacing="-0.01"
                        android:text="@string/profile_chauffeur_new_password"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <EditText
                        android:id="@+id/edittext_new_password"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="21dp"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="@string/profile_chauffeur_new_password_hint"
                        android:textSize="17.5dp"
                        android:textColor="#222222"
                        android:textColorHint="#cccccc"
                        android:letterSpacing="-0.01"
                        android:background="@android:color/transparent"
                        android:drawableRight="@drawable/checkbox_password_confirm"
                        android:drawablePadding="10dp"
                        android:tag="password"
                        app:layout_constraintTop_toBottomOf="@+id/new_password"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="21dp"
                        android:background="#cccccc"
                        android:tag="divider"
                        app:layout_constraintTop_toBottomOf="@+id/edittext_new_password"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:id="@+id/new_password_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:textSize="17.5dp"
                        android:textColor="#656565"
                        android:letterSpacing="-0.01"
                        android:text="@string/profile_chauffeur_new_password_confirm"
                        app:layout_constraintLeft_toLeftOf="@+id/divider3"
                        app:layout_constraintTop_toBottomOf="@+id/divider3"/>

                    <EditText
                        android:id="@+id/edittext_new_password_confirm"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="@string/profile_chauffeur_new_password_confirm_hint"
                        android:textSize="17.5dp"
                        android:textColor="#222222"
                        android:textColorHint="#cccccc"
                        android:letterSpacing="-0.01"
                        android:background="@android:color/transparent"
                        android:drawableRight="@drawable/checkbox_password_confirm"
                        android:drawablePadding="10dp"
                        android:tag="password"
                        app:layout_constraintTop_toBottomOf="@+id/new_password_confirm"
                        app:layout_constraintLeft_toLeftOf="@+id/divider3"
                        app:layout_constraintRight_toRightOf="@+id/divider3"/>

                    <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="21dp"
                        android:background="#cccccc"
                        android:tag="divider"
                        app:layout_constraintTop_toBottomOf="@+id/edittext_new_password_confirm"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="21dp"-->
                        <!--android:layout_marginTop="25dp"-->
                        <!--android:textSize="16dp"-->
                        <!--android:textColor="#a5a5a5"-->
                        <!--android:letterSpacing="-0.01"-->
                        <!--android:lineSpacingExtra="8sp"-->
                        <!--android:text="@string/profile_chauffeur_password_warning"-->
                        <!--app:layout_constraintTop_toBottomOf="@+id/divider4"-->
                        <!--app:layout_constraintLeft_toLeftOf="parent"-->
                        <!--app:layout_constraintRight_toRightOf="parent"-->
                        <!--app:layout_constrainedWidth="true"/>-->

                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="100dp"
                    android:layout_height="65dp"
                    android:gravity="center|left"
                    android:textSize="17.5dp"
                    android:textColor="#656565"
                    android:letterSpacing="-0.01"
                    android:text="@string/profile_chauffeur_phone"
                    app:layout_constraintLeft_toLeftOf="@+id/divider2"
                    app:layout_constraintTop_toBottomOf="@+id/view_expanded"
                    app:layout_constraintRight_toLeftOf="@+id/phone_number_text"
                    app:layout_constraintHorizontal_chainStyle="packed" />

                <TextView
                    android:id="@+id/phone_number_text"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="17.5dp"
                    android:textColor="#222222"
                    android:letterSpacing="-0.01"
                    android:text=""
                    app:layout_constraintLeft_toRightOf="@+id/phone_number"
                    app:layout_constraintTop_toTopOf="@+id/phone_number"
                    app:layout_constraintBottom_toBottomOf="@+id/phone_number"
                    app:layout_constraintRight_toRightOf="parent"/>

                <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:background="#cccccc"
                    app:layout_constraintTop_toBottomOf="@+id/phone_number_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/view_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divider7">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/view_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/bank_section"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="29dp"
                            android:layout_marginLeft="21dp"
                            android:textSize="16dp"
                            android:textColor="#00cad2"
                            android:letterSpacing="-0.02"
                            android:text="@string/profile_bank_info_section"
                            android:includeFontPadding="false"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/bank"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:gravity="center|left"
                            android:textSize="17.5dp"
                            android:textColor="#656565"
                            android:letterSpacing="-0.01"
                            android:text="@string/profile_bank_info_bank"
                            app:layout_constraintLeft_toLeftOf="@+id/bank_section"
                            app:layout_constraintTop_toBottomOf="@+id/bank_section"
                            app:layout_constraintRight_toLeftOf="@+id/bank_text"
                            app:layout_constraintHorizontal_chainStyle="packed" />

                        <TextView
                            android:id="@+id/bank_text"
                            android:layout_width="0dp"
                            android:layout_height="65dp"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="17.5dp"
                            android:textColor="#222222"
                            android:letterSpacing="-0.01"
                            android:text=""
                            app:layout_constraintLeft_toRightOf="@+id/bank"
                            app:layout_constraintTop_toTopOf="@+id/bank"
                            app:layout_constraintBottom_toBottomOf="@+id/bank"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <View
                            android:id="@+id/divider5"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="21dp"
                            android:layout_marginRight="21dp"
                            android:background="#cccccc"
                            app:layout_constraintTop_toBottomOf="@+id/bank"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <TextView
                            android:id="@+id/bank_number"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:gravity="center|left"
                            android:textSize="17.5dp"
                            android:textColor="#656565"
                            android:letterSpacing="-0.01"
                            android:text="@string/profile_bank_info_number"
                            app:layout_constraintLeft_toLeftOf="@+id/bank"
                            app:layout_constraintTop_toBottomOf="@+id/divider5"
                            app:layout_constraintRight_toLeftOf="@+id/bank_number_text"
                            app:layout_constraintHorizontal_chainStyle="packed" />

                        <TextView
                            android:id="@+id/bank_number_text"
                            android:layout_width="0dp"
                            android:layout_height="65dp"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="17.5dp"
                            android:textColor="#222222"
                            android:letterSpacing="-0.01"
                            android:text=""
                            app:layout_constraintLeft_toRightOf="@+id/bank_number"
                            app:layout_constraintTop_toTopOf="@+id/bank_number"
                            app:layout_constraintBottom_toBottomOf="@+id/bank_number"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <View
                            android:id="@+id/divider6"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="21dp"
                            android:layout_marginRight="21dp"
                            android:background="#cccccc"
                            app:layout_constraintTop_toBottomOf="@+id/bank_number"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <TextView
                            android:id="@+id/bank_name"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:gravity="center|left"
                            android:textSize="17.5dp"
                            android:textColor="#656565"
                            android:letterSpacing="-0.01"
                            android:text="@string/profile_bank_info_name"
                            app:layout_constraintLeft_toLeftOf="@+id/bank_number"
                            app:layout_constraintTop_toBottomOf="@+id/divider6"
                            app:layout_constraintRight_toLeftOf="@+id/bank_name_text"
                            app:layout_constraintHorizontal_chainStyle="packed" />

                        <TextView
                            android:id="@+id/bank_name_text"
                            android:layout_width="0dp"
                            android:layout_height="65dp"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="17.5dp"
                            android:textColor="#222222"
                            android:letterSpacing="-0.01"
                            android:text=""
                            app:layout_constraintLeft_toRightOf="@+id/bank_name"
                            app:layout_constraintTop_toTopOf="@+id/bank_name"
                            app:layout_constraintBottom_toBottomOf="@+id/bank_name"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <View
                            android:id="@+id/divider8"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="21dp"
                            android:layout_marginRight="21dp"
                            android:background="#cccccc"
                            app:layout_constraintTop_toBottomOf="@+id/bank_name"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/view_legal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/legal_section"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="29dp"
                            android:layout_marginLeft="21dp"
                            android:textSize="16dp"
                            android:textColor="#00cad2"
                            android:letterSpacing="-0.02"
                            android:text="@string/profile_legal_info_section"
                            android:includeFontPadding="false"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/legal"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:gravity="center|left"
                            android:textSize="17.5dp"
                            android:textColor="#656565"
                            android:letterSpacing="-0.01"
                            android:text="@string/profile_legal_info_name"
                            app:layout_constraintLeft_toLeftOf="@+id/legal_section"
                            app:layout_constraintTop_toBottomOf="@+id/legal_section"
                            app:layout_constraintRight_toLeftOf="@+id/legal_text"
                            app:layout_constraintHorizontal_chainStyle="packed" />

                        <TextView
                            android:id="@+id/legal_text"
                            android:layout_width="0dp"
                            android:layout_height="65dp"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="17.5dp"
                            android:textColor="#222222"
                            android:letterSpacing="-0.01"
                            android:text=""
                            app:layout_constraintLeft_toRightOf="@+id/legal"
                            app:layout_constraintTop_toTopOf="@+id/legal"
                            app:layout_constraintBottom_toBottomOf="@+id/legal"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <View
                            android:id="@+id/divider9"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="21dp"
                            android:layout_marginRight="21dp"
                            android:background="#cccccc"
                            app:layout_constraintTop_toBottomOf="@+id/legal"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <TextView
                            android:id="@+id/legal_number"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:gravity="center|left"
                            android:textSize="17.5dp"
                            android:textColor="#656565"
                            android:letterSpacing="-0.01"
                            android:text="@string/profile_legal_info_number"
                            app:layout_constraintLeft_toLeftOf="@+id/legal"
                            app:layout_constraintTop_toBottomOf="@+id/divider9"
                            app:layout_constraintRight_toLeftOf="@+id/legal_number_text"
                            app:layout_constraintHorizontal_chainStyle="packed" />

                        <TextView
                            android:id="@+id/legal_number_text"
                            android:layout_width="0dp"
                            android:layout_height="65dp"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="17.5dp"
                            android:textColor="#222222"
                            android:letterSpacing="-0.01"
                            android:text=""
                            app:layout_constraintLeft_toRightOf="@+id/legal_number"
                            app:layout_constraintTop_toTopOf="@+id/legal_number"
                            app:layout_constraintBottom_toBottomOf="@+id/legal_number"
                            app:layout_constraintRight_toRightOf="parent"/>

                        <View
                            android:id="@+id/divider10"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="21dp"
                            android:layout_marginRight="21dp"
                            android:background="#cccccc"
                            app:layout_constraintTop_toBottomOf="@+id/legal_number"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                    </android.support.constraint.ConstraintLayout>
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.Group
                    android:id="@+id/invisibleGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="car_info_warning"/>

                <TextView
                    android:id="@+id/car_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp"
                    android:layout_marginLeft="21dp"
                    android:textSize="16dp"
                    android:textColor="#00cad2"
                    android:letterSpacing="-0.02"
                    android:text="@string/profile_car_info_section"
                    android:includeFontPadding="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_switch" />

                <TextView
                    android:id="@+id/car_info_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="13dp"
                    android:textColor="#fe6aa3"
                    android:letterSpacing="-0.02"
                    android:text="@string/profile_start_limit"
                    android:includeFontPadding="false"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintRight_toRightOf="parent"
