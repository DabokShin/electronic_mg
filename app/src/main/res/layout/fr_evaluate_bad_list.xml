<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <include
            android:id="@+id/title"
            layout="@layout/macaron_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="35.3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19.7dp"
                        android:text="마학동 쇼퍼"
                        android:textColor="#f97dad"
                        android:textStyle="bold"
                        android:textSize="22dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="님"
                        android:textColor="#b7b7b7"
                        android:textStyle="bold"
                        android:textSize="22dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19.7dp"
                        android:text="불친절하다는 평가"
                        android:textColor="#f97dad"
                        android:textStyle="bold"
                        android:textSize="17dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="를 받고 계십니다."
                        android:textColor="#b7b7b7"
                        android:textStyle="bold"
                        android:textSize="17dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="68.3dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/background_evaluate_bad">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="17.3dp"
                        android:layout_marginRight="17.3dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="13dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:text="1. 불만족하다"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17.7dp"
                        android:textSize="17dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        tools:text="(000000)"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/background_evaluate_normal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="17.3dp"
                        android:layout_marginRight="17.3dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="13dp"
                        android:textColor="#b7b7b7"
                        android:textStyle="bold"
                        android:text="2. 불친절하다"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17.7dp"
                        android:textSize="17dp"
                        android:textColor="#b7b7b7"
                        android:textStyle="bold"
                        tools:text="(000000)"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/background_evaluate_normal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="17.3dp"
                        android:layout_marginRight="17.3dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="13dp"
                        android:textColor="#b7b7b7"
                        android:textStyle="bold"
                        android:text="3. 불안전하다"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17.7dp"
                        android:textSize="17dp"
                        android:textColor="#b7b7b7"
                        android:textStyle="bold"
                        tools:text="(000000)"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/background_evaluate_normal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="17.3dp"
                        android:layout_marginRight="17.3dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="13dp"
                        android:textColor="#b7b7b7"
                        android:textStyle="bold"
                        android:text="4. 차량서비스불만족하다"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17.7dp"
                        android:textSize="17dp"
                        android:textColor="#b7b7b7"
                        android:textStyle="bold"
                        tools:text="(000000)"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/background_evaluate_normal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="17.3dp"
                        android:layout_marginRight="17.3dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="13dp"
                        android:textColor="#b7b7b7"
                        android:textStyle="bold"
                        android:text="5. 불청결하다"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17.7dp"
                        android:textSize="17dp"
                        android:textColor="#b7b7b7"
                        android:textStyle="bold"
                        tools:text="(000000)"/>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>